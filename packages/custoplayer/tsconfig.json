{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "types": [
            "cypress",
            "node"
        ],
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "declaration": true,
        "baseUrl": "./",
        "paths": {
            "@root/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "./src",
        "jest.config.js",
        "**/*.ts",
        "**/*.tsx"
    ]
}
